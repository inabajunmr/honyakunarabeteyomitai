{
  "manifest_version": 3,
  "name": "honyakunarabeteyomitai",
  "version": "1.1.0",
  "description": "Show translated and original pages side-by-side in one tab and sync scrolling.",
  "permissions": ["tabs", "declarativeNetRequest"],
  "host_permissions": ["<all_urls>"],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "strip-frame-blockers",
        "enabled": true,
        "path": "rules/strip-frame-blockers.json"
      }
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "honyakunarabeteyomitai"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ]
}
